{% extends 'base.html.twig' %}

{% block title %}Minishop - Symfony 4 Home{% endblock %}

{% block header %}
    {{ include('site/partials/phone_email_line.html.twig') }}
{% endblock %}

{% block content %}

    <h2>Список товаров ( вывод изображений )</h2>
    <table class="table table-striped table-middle-aligned table-sm">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Наименование</th>
            <th scope="col">Цена</th>
            <th scope="col">Изабражение</th>
        </tr>
        </thead>
        <tbody style="padding: 0;">
        {% for product in products %}
            <tr style="padding: 0;">
                <td style="padding: 0;">{{ product.id }}</td>
                <td style="padding: 0;">{{ product.name }}</td>
                <td style="padding: 0;">{{ product.price }}</td>
                <td style="padding: 0;">
                    <img src="{{ asset(product.img) }}" height="100px" alt="small-img">
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

